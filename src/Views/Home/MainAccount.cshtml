@model YouBank24.Models.ViewModels.AccountViewModel

<div class="d-flex flex-column align-items-center" style="gap: 75px;">
    <div class="header">
        <input hidden asp-for="Account.AccountId" />
        <h2 class="main-title text-uppercase mb-0">Welcome, @Model.ApplicationUser.FirstName!</h2>
    </div>
    <div class="user-card w-25 py-2 px-3">
        <div class="row mb-3">
            <div class="col-6 d-flex justify-content-md-start align-items-center">
                <img src="~/img/YouBank-logo2-black.png" class="w-50" />
            </div>
            <div class="col-6 d-flex justify-content-end align-items-center">
                <img src="~/img/contactless.png" class="mt-3 me-2" style="width: 20%;" />
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <img src="~/img/chip.png" class="ms-4 mb-3" style="width: 10%;" />
            </div>
        </div>
        <div class="row">
            <div class="col-12 d-flex align-items-center justify-content-center">
                <p class="card-number" id="hiddenCardNumber"></p>
            </div>
        </div>        
        <div class="row">
            <div class="col-12 d-flex align-items-center justify-content-center mb-2">
                <p class="expiration-date">@Model.Account.ExpirationDate</p>
            </div>
        </div>
        <div class="row pb-2">
            <div class="col-8">
                <p class="card-name text-uppercase m-0">@Model.ApplicationUser.FirstName @Model.ApplicationUser.LastName</p>
            </div>
            <div class="col-4 d-flex align-items-center justify-content-end">
                <img src="~/img/visa2.png" style="width: 70%;" />
            </div>
        </div>
    </div>
    <div class="balance d-flex justify-content-evenly align-items-center">
        <p class="balance-text text-uppercase">Your current balance is:</p> <button  id="balanceButton" class="btn btn-primary" style="width: 20%;">SHOW</button>
    </div>
    <div class="action-buttons d-flex justify-content-center" style="width: 40%;">
        <a asp-area="" asp-controller="SendMoney" asp-action="Index" class="btn btn-primary d-flex align-items-center justify-content-around me-4" style="width: 30%;">
            <img src="~/img/money.png" style="width: 30px;" />
            <p class="action-buttons-text">
                Send Money
            </p>
        </a>
        <a asp-area="" asp-controller="TransactionList" asp-action="Index" class="btn btn-primary d-flex align-items-center justify-content-around" style="width: 30%;">
            <img src="~/img/history.png" style="width: 30px;" />
            <p class="action-buttons-text">
                Transactions
            </p>
        </a>
    </div>
</div>

<script src="~/js/mainAccount.js" type="text/javascript"></script>