@model Transaction

<form method="post" asp-controller="SendMoney" asp-action="SendMoney" enctype="multipart/form-data">
    <input hidden asp-for="TransactionId" />
<div class="d-flex flex-column align-items-center" style="gap: 50px;">
    <div class="header">
        <h2 class="main-title text-uppercase mb-0" style="
    font-size: 60px;
">Send Money Instantly</h2>
    </div>
    <div class="items-container d-flex justify-content-start align-items-center flex-column w-100">
            <div id="inputContainer" class="input-amount d-none d-flex align-items-center p-3 mb-3">
            <p class="text-uppercase me-3" style="letter-spacing: 0.25rem;">Amount:</p>
            <input id="inputAmount" class="form-control w-25" asp-for="Amount" type="number" />
            <input hidden id="inputEmail" class="form-control w-25" type="text" name="email" />
        </div>
    </div>
    <div class="action-buttons d-flex justify-content-center mb-5" style="width: 40%;">
        <button type="submit" class="btn btn-primary d-flex align-items-center justify-content-around me-4" style="width: 30%;">
            <img src="~/img/money.png" style="width: 30px;" />
            <p class="action-buttons-text">
                Send Money
            </p>
        </button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-light d-flex align-items-center justify-content-around " style="width: 30%;">
            <p class="action-buttons-text text-dark">
                Go Back
            </p>
        </a>
    </div>
</div>
</form>

<script src="~/js/sendMoney.js" type="text/javascript"></script>